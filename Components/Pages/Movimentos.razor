@page "/movimentos"
@layout PaneGEST_Blazor_MySQL.Components.Layout.EmptyLayout
@attribute [Authorize]
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using PaneGEST_Blazor_MySQL.Models
@inject WwwpanetPaneGestContext Db
@inject NavigationManager Nav
@inject IJSRuntime JS

<PageTitle>Registo de Movimentos</PageTitle>

<div class="page-container">

    <!-- ÁREA PRINCIPAL -->
    <div class="split-container">

        <!-- PAINEL ESQUERDO: FILTROS + GRELHA -->
        <div class="left-panel">

            <!-- BARRA DE FILTROS -->
            <div class="filter-bar">
                <div class="filter-item">
                    <label>Loja:</label>
                    <select class="filter-input" @bind="filtroLojaId">
                        <option value="0">--- TODAS ---</option>
                        @foreach (var l in ListaLojasCombo)
                        {
                            <option value="@l.IdLoja">@l.NomeLoja</option>
                        }
                    </select>
                </div>

                <div class="filter-item">
                    <label>De:</label>
                    <input type="date" class="filter-input" @bind="filtroDataIni" />
                </div>

                <div class="filter-item">
                    <label>Até:</label>
                    <input type="date" class="filter-input" @bind="filtroDataFim" />
                </div>

                <button class="btn-pesquisar" @onclick="CarregarDados">🔍</button>
            </div>

            <!-- TABELA -->
            <div class="table-container">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th style="cursor: pointer" @onclick='() => Ordenar("data")'>
                                Data @(sortColumn == "data" ? (isAscending ? "▲" : "▼") : "")
                            </th>
                            <th style="cursor: pointer" @onclick='() => Ordenar("loja")'>
                                Loja @(sortColumn == "loja" ? (isAscending ? "▲" : "▼") : "")
                            </th>
                            <th style="text-align: right; cursor: pointer" @onclick='() => Ordenar("von")'>
                                On @(sortColumn == "von" ? (isAscending ? "▲" : "▼") : "")
                            </th>
                            <th style="text-align: right; cursor: pointer" @onclick='() => Ordenar("voff")'>
                                Off @(sortColumn == "voff" ? (isAscending ? "▲" : "▼") : "")
                            </th>
                            <th style="text-align: right;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in ListaMovimentos)
                        {
                            <tr class="@(m.IdMovimento == movSelecionado?.IdMovimento ? "selected" : "")"
                                @onclick="() => SelecionarMovimento(m)">

                                <td style="text-align: center;">@m.DataMovimento.ToString("dd-MM-yyyy")</td>

                                <!-- Correção: Busca o nome da loja manualmente -->
                                <td>@GetNomeLoja(m.IdLoja)</td>

                                <!-- Correção: Conversão explícita de double para decimal para formatar moeda -->
                                <td style="text-align: right; color: green; font-weight: 500;">
                                    @(((decimal)m.ValorOn).ToString("C2"))
                                </td>
                                <td style="text-align: right; color: #B22222; font-weight: 500;">
                                    @(((decimal)m.ValorOff).ToString("C2"))
                                </td>
                                <td style="text-align: right; font-weight: bold;">
                                    @(((decimal)(m.ValorOn + m.ValorOff)).ToString("C2"))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- PAINEL DIREITO: FORMULÁRIO -->
        <div class="right-panel">
            <h3 class="form-title">Detalhes do Movimento</h3>

            <!-- Loja -->
            <div class="form-group">
                <label>Loja:</label>
                <select class="form-control" @bind="formLojaId" disabled="@(!emEdicao)">
                    <option value="0">Selecione...</option>
                    @foreach (var l in ListaLojasCombo)
                    {
                        <option value="@l.IdLoja">@l.NomeLoja</option>
                    }
                </select>
            </div>

            <!-- Data -->
            <div class="form-group">
                <label>Data:</label>
                <input type="date" class="form-control" @bind="formData" disabled="@(!emEdicao)" />
            </div>

            <!-- Valores -->
            <div class="form-group">
                <label>Valor ON (€):</label>
                <input type="number" step="0.01" class="form-control" @bind="formValOn" disabled="@(!emEdicao)" />
            </div>

            <div class="form-group">
                <label>Valor OFF (€):</label>
                <input type="number" step="0.01" class="form-control" @bind="formValOff" disabled="@(!emEdicao)" />
            </div>

            <!-- Observações -->
            <div class="form-group">
                <label>Observações:</label>
                <textarea class="form-control" rows="3" @bind="formObs" disabled="@(!emEdicao)"></textarea>
            </div>

            @if (emEdicao)
            {
                <div class="form-buttons">
                    <button class="btn btn-action" @onclick="Guardar">💾 Guardar</button>
                    <button class="btn btn-danger" @onclick="Cancelar">❌ Cancelar</button>
                </div>
            }
        </div>
    </div>

    <!-- BARRA INFERIOR -->
    <div class="bottom-bar">
        <div class="left-actions">
            <button class="btn btn-primary" @onclick="Novo" disabled="@emEdicao">➕ Novo</button>
            <button class="btn btn-action" @onclick="Editar" disabled="@(emEdicao || movSelecionado == null)">✏️ Editar</button>
            <button class="btn btn-danger" @onclick="Apagar" disabled="@(emEdicao || movSelecionado == null)">🗑️ Apagar</button>
        </div>

        <div class="right-actions">
            <button class="btn btn-voltar" @onclick="Voltar">⬅ Voltar</button>
        </div>
    </div>

</div>

<style>
    /* --- CSS IGUAL AO ANTERIOR --- */
