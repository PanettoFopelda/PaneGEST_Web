        display: flex;
        flex-direction: column;
        height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .split-container {
        flex-grow: 1;
        display: flex;
        overflow: hidden;
    }

    .left-panel {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        border-right: 1px solid #ddd;
        background-color: white;
    }

    .filter-bar {
        padding: 10px;
        background-color: #f5f5f5;
        border-bottom: 1px solid #ddd;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .filter-item {
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 0.9rem;
    }

    .filter-input {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-pesquisar {
