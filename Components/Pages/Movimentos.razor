            background-color: #f9f9f9;
        }

        .custom-table tr.selected {
            background-color: #e0efff;
            border-left: 4px solid #28A745;
        }

    .right-panel {
        width: 340px;
        padding: 20px;
        background-color: white;
        box-shadow: -2px 0 5px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
    }

    .form-title {
        color: #28A745;
        margin-bottom: 15px;
        font-size: 1.4rem;
    }

    .form-group {
        margin-bottom: 12px;
    }

        .form-group label {
            display: block;
            color: gray;
            font-size: 0.85rem;
            margin-bottom: 4px;
        }

    .form-control {
        width: 100%;
        padding: 6px 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-family: 'Segoe UI', sans-serif;
    }

        .form-control:disabled {
            background-color: #f5f5f5;
        }

    .form-buttons {
        margin-top: 15px;
        display: flex;
        gap: 10px;
    }

    .bottom-bar {
        height: 70px;
        background-color: #DCDCDC;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
        border-top: 1px solid #ccc;
        flex-shrink: 0;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
        color: white;
        font-size: 10pt;
    }

        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            background-color: gray;
        }

    .btn-primary {
        background-color: #0d6efd;
    }

    .btn-action {
        background-color: #198754;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-voltar {
        background-color: #B22222;
    }

    .left-actions {
        display: flex;
        gap: 15px;
    }
</style>

@code {
    // DADOS
    private List<Movimento> ListaMovimentos = new();
    private List<Loja> ListaLojasCombo = new();
    private Movimento? movSelecionado;

    // FILTROS (Atenção: DateOnly)
    private int filtroLojaId = 0;
    private DateTime filtroDataIni = DateTime.Now.AddDays(-30); // DateTime para o input
    private DateTime filtroDataFim = DateTime.Now;

    // FORMULÁRIO
    private int formLojaId = 0;
    private DateOnly formData = DateOnly.FromDateTime(DateTime.Now); // DateOnly para a BD
    private decimal formValOn = 0;
    private decimal formValOff = 0;
    private string formObs = "";

    // ESTADOS
    private bool emEdicao = false;
    private bool novoRegisto = false;

    // ORDENAÇÃO
    private string sortColumn = "data";
    private bool isAscending = false;

    protected override async Task OnInitializedAsync()
    {
        // Carregar Combo de Lojas
        ListaLojasCombo = await Db.Lojas.OrderBy(l => l.NomeLoja).ToListAsync();
        await CarregarDados();
    }

    // Helper para obter nome da loja sem usar Navigation Property
    private string GetNomeLoja(int idLoja)
    {
        var loja = ListaLojasCombo.FirstOrDefault(l => l.IdLoja == idLoja);
        return loja?.NomeLoja ?? "-";
    }

    private async Task CarregarDados()
    {
        // 1. Carrega os dados da tabela Movimentos
        var query = Db.Movimentos.AsQueryable();

        if (filtroLojaId > 0)
        {
            query = query.Where(m => m.IdLoja == filtroLojaId);
        }

        // Converter Filtros de DateTime para DateOnly para comparar com a BD
        DateOnly dIni = DateOnly.FromDateTime(filtroDataIni);
        DateOnly dFim = DateOnly.FromDateTime(filtroDataFim);

        query = query.Where(m => m.DataMovimento >= dIni && m.DataMovimento <= dFim);

        var dados = await query.ToListAsync();
        AplicarOrdenacao(dados);
    }

    private void Ordenar(string coluna)
    {
        if (sortColumn == coluna) isAscending = !isAscending;
        else { sortColumn = coluna; isAscending = true; }

        AplicarOrdenacao(ListaMovimentos);
    }

    private void AplicarOrdenacao(List<Movimento> lista)
    {
        switch (sortColumn)
        {
            case "data":
                ListaMovimentos = isAscending ? lista.OrderBy(m => m.DataMovimento).ToList() : lista.OrderByDescending(m => m.DataMovimento).ToList();
                break;
            case "loja":
                // Ordenar pelo nome da loja usando o Helper
                ListaMovimentos = isAscending
                    ? lista.OrderBy(m => GetNomeLoja(m.IdLoja)).ToList()
                    : lista.OrderByDescending(m => GetNomeLoja(m.IdLoja)).ToList();
                break;
            case "von":
                ListaMovimentos = isAscending ? lista.OrderBy(m => m.ValorOn).ToList() : lista.OrderByDescending(m => m.ValorOn).ToList();
                break;
            case "voff":
                ListaMovimentos = isAscending ? lista.OrderBy(m => m.ValorOff).ToList() : lista.OrderByDescending(m => m.ValorOff).ToList();
                break;
        }
    }

    private void SelecionarMovimento(Movimento m)
    {
        if (emEdicao) return;

        movSelecionado = m;
        formLojaId = m.IdLoja;
        formData = m.DataMovimento;

        // Conversão segura de double (BD) para decimal (Formulário)
        formValOn = (decimal)m.ValorOn;
        formValOff = (decimal)m.ValorOff;

        formObs = m.Observacoes ?? "";
    }

    private void Novo()
    {
        movSelecionado = new Movimento();
        formLojaId = 0;
        formData = DateOnly.FromDateTime(DateTime.Now);
        formValOn = 0; formValOff = 0; formObs = "";

        novoRegisto = true; emEdicao = true;
    }

    private void Editar()
    {
        if (movSelecionado == null) return;
        novoRegisto = false; emEdicao = true;
    }

    private async Task Apagar()
    {
        if (movSelecionado == null) return;
        if (await JS.InvokeAsync<bool>("confirm", "Apagar este movimento?"))
        {
            Db.Movimentos.Remove(movSelecionado);
            await Db.SaveChangesAsync();
            movSelecionado = null;
            await CarregarDados();
        }
    }

    private async Task Guardar()
    {
        if (formLojaId == 0) { await JS.InvokeVoidAsync("alert", "Selecione a Loja."); return; }

        try
        {
            if (novoRegisto)
            {
                var novo = new Movimento
                {
                    IdLoja = formLojaId,
                    DataMovimento = formData,
                    ValorOn = (double)formValOn,   // Cast Decimal -> Double
                    ValorOff = (double)formValOff, // Cast Decimal -> Double
                    Observacoes = formObs
                };
                Db.Movimentos.Add(novo);
            }
            else
            {
                var dbMov = await Db.Movimentos.FindAsync(movSelecionado!.IdMovimento);
                if (dbMov != null)
                {
                    dbMov.IdLoja = formLojaId;
                    dbMov.DataMovimento = formData;
                    dbMov.ValorOn = (double)formValOn;
                    dbMov.ValorOff = (double)formValOff;
                    dbMov.Observacoes = formObs;
                }
            }

            await Db.SaveChangesAsync();

            emEdicao = false; novoRegisto = false; movSelecionado = null;
            formLojaId = 0; formValOn = 0; formValOff = 0; formObs = "";

            await CarregarDados();
        }
        catch (Exception ex) { await JS.InvokeVoidAsync("alert", "Erro: " + ex.Message); }
    }

    private void Cancelar()
    {
        emEdicao = false; novoRegisto = false;
        if (movSelecionado != null && movSelecionado.IdMovimento > 0)
        {
            formLojaId = movSelecionado.IdLoja;
            formData = movSelecionado.DataMovimento;
            formValOn = (decimal)movSelecionado.ValorOn;
            formValOff = (decimal)movSelecionado.ValorOff;
            formObs = movSelecionado.Observacoes ?? "";
        }
        else
        {
            movSelecionado = null;
            formLojaId = 0; formValOn = 0; formValOff = 0; formObs = "";
        }
    }

    private void Voltar() => Nav.NavigateTo("/dashboard");
}
