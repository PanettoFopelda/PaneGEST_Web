@page "/"
@page "/login"

<PageTitle>Acesso ao Sistema</PageTitle>

<style>
    .login-wrapper {
        position: fixed;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #28374C;
        z-index: 9999;
    }

    .login-panel {
        width: 340px;
        padding: 25px 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 8px 20px rgba(0,0,0,.35);
    }

    .login-title {
        text-align: center;
        font-weight: 700;
        margin-bottom: 20px;
        color: #333;
        font-size: 1.5rem;
    }

    .input {
        width: 100%;
        padding: 10px;
        margin-bottom: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn {
        width: 100%;
        padding: 10px;
        font-weight: bold;
        color: #fff;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

    /* Botão Entrar (Azul) */
    .btn-login {
        background: #00A0BE;
        margin-bottom: 10px;
    }

        .btn-login:hover {
            background: #008C9E;
        }

    /* Botão Sair (Vermelho) */
    .btn-exit {
        background: #DC3545;
    }

        .btn-exit:hover {
            background: #c82333;
        }

    .error-msg {
        color: #DC3545;
        text-align: center;
        margin-bottom: 10px;
        font-size: 0.9rem;
    }
</style>

<div class="login-wrapper">
    <div class="login-panel">
        <div class="login-title">PaneGEST</div>

        @if (ShowError)
        {
            <div class="error-msg">Utilizador ou password incorretos.</div>
        }

        <!-- Formulário de Login -->
        <form action="/account/login" method="post">
            <AntiforgeryToken />

            <input class="input" type="text" name="username" placeholder="Utilizador" required />
            <input class="input" type="password" name="password" placeholder="Password" required />

            <button type="submit" class="btn btn-login">Entrar</button>
        </form>

        <!-- Botão Sair -->
        <button type="button" class="btn btn-exit" onclick="window.location.href='https://www.panetto.pt'">
            Sair
        </button>

    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "erro")]
    public bool ShowError { get; set; }
}
