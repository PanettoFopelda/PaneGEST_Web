@inherits LayoutComponentBase
@inject NavigationManager Nav

<div class="d-flex h-100">

    <main class="content">
        @Body
    </main>

</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
    }

    .d-flex {
        display: flex;
    }

    .h-100 {
        height: 100vh;
    }

    .sidebar {
        width: 220px;
        background-color: #28374C;
        color: white;
        padding: 15px;
    }

        .sidebar h3 {
            margin-top: 0;
            margin-bottom: 20px;
        }

        .sidebar nav a {
            display: block;
            color: white;
            text-decoration: none;
            padding: 8px 0;
            font-weight: 500;
        }

            .sidebar nav a:hover {
                text-decoration: underline;
            }

    .content {
        flex: 1;
        padding: 20px;
        background-color: #f4f6f9;
        overflow-y: auto;
    }
</style>
